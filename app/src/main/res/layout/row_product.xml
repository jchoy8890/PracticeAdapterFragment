<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5sp"
    android:paddingBottom="5sp">

    <ImageView
        android:id="@+id/imgViewProduct"
        android:padding="5sp"
        android:layout_width="80sp"
        android:layout_height="80sp"
        tools:src="@mipmap/ic_launcher_round"
        android:adjustViewBounds="true"
        />

    <TextView
        android:id="@+id/txtNameProduct"
        android:paddingTop="3sp"
        android:paddingBottom="3sp"
        android:paddingLeft="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Nombre Producto"
        android:layout_toRightOf="@id/imgViewProduct"
        android:textStyle="bold"
        />
    <!--tools:textStyle="bold" -->

    <TextView
        android:id="@+id/txtPriceProduct"
        android:paddingTop="3sp"
        android:paddingBottom="3sp"
        android:paddingLeft="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Precio Producto"
        android:layout_below="@id/txtNameProduct"
        android:layout_toRightOf="@id/imgViewProduct"
        />

    <TextView
        android:id="@+id/txtDescriptionProduct"
        android:paddingTop="3sp"
        android:paddingBottom="3sp"
        android:paddingLeft="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="DescripciÃ³n Producto"
        android:layout_below="@id/txtPriceProduct"
        android:layout_toRightOf="@id/imgViewProduct"
        />
</RelativeLayout>