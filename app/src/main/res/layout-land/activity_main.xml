<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="10"
    tools:context="com.jcservices.apps.practicabf.MainActivity">


    <fragment
        android:id="@+id/fragmentLstProducts"
        android:name="com.jcservices.apps.practicabf.ListProductFragment"
        class="com.jcservices.apps.practicabf.ListProductFragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        tools:layout="@layout/fragment_list_product" />


    <fragment
        android:id="@+id/fragmentDetailsProducts"
        android:name="com.jcservices.apps.practicabf.ProductSelectedFragment"
        class="com.jcservices.apps.practicabf.ProductSelectedFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        tools:layout="@layout/fragment_product_selected" />



</LinearLayout>
